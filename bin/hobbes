#! /usr/bin/env node

global.sys = require(/^v0\.[012]/.test(process.version) ? "sys" : "util");
var fs = require("fs");
var hobbes = require("../hobbes");

var filename = process.argv[2];

if (filename) {
  fs.readFile(filename, "utf8", function(err, src){
    if (err) throw err;
    execute(src);

    process.exit();
  });
}

function execute(src) {
  hobbes.compiler.run(src);
};

